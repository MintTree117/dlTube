<UserControl 
	x:Class="dlTubeAvaloniaCrossPlatform.Views.AppSettingsView"
	x:DataType="viewModels1:AppSettingsViewModel"
	xmlns="https://github.com/avaloniaui"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:viewModels1="clr-namespace:dlTubeAvaloniaCrossPlatform.ViewModels;assembly=dlTubeAvaloniaCrossPlatform">
	
	<!-- Content Wrapper -->
	<Border
		HorizontalAlignment="Center"
		VerticalAlignment="Center"
		BorderThickness="1"
		MinWidth="480"
		MaxWidth="1000"
		Padding="40"
		CornerRadius="5"
		Background="#cc000000"
		BorderBrush="DarkGray">
		<!-- Content -->
		<StackPanel>
			<!-- Title -->
			<TextBlock
				HorizontalAlignment="Left"
				Margin="0 0 0 20"
				FontSize="36"
				FontWeight="Bold"
				TextDecorations="Underline"
				Text="App Settings" />
			<!-- Download Location Title -->
			<TextBlock
				HorizontalAlignment="Left"
				Margin="0 0 0 5"
				FontWeight="Bold"
				Text="Download Location" />
			<!-- Download Location Field -->
			<TextBox
				HorizontalAlignment="Stretch"
				Margin="0 0 0 0"
				Padding="15"
				Text="{Binding DownloadLocation}" />
			<!-- Save Button -->
			<Button
				HorizontalAlignment="Stretch"
				HorizontalContentAlignment="Center"
				Margin="0,15,0,0"
				Padding="0,15"
				IsEnabled="{Binding SettingsChanged}"
				Command="{Binding SaveChangesCommand}"
				Content="Save Changes" />
		</StackPanel>
	</Border>
</UserControl>