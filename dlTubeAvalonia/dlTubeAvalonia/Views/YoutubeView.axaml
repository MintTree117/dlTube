<UserControl 
	x:Class="dlTubeAvalonia.Views.YoutubeView"
	x:DataType="viewModels:YoutubeViewModel"
	xmlns="https://github.com/avaloniaui"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:viewModels="clr-namespace:dlTubeAvalonia.ViewModels">
	
	<!-- Padding -->
    <Panel
        MaxWidth="560"
        HorizontalAlignment="Center"
        VerticalAlignment="Center"
        Background="#cc000000">
        <Border
            BorderBrush="DarkGray"
            BorderThickness="1"
            CornerRadius="5">
            <StackPanel
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                MaxWidth="460"
                Margin="50,30,50,50">
                <!-- Page Title -->
                <TextBlock
                    Margin="0 0 0 30"
                    HorizontalAlignment="Center"
                    FontWeight="Bold"
                    FontSize="40"
                    TextDecorations="Underline"
                    Text="Youtube Downloader" />
                <!-- Video Meta -->
                <TextBlock
                    Margin="0,0,0,10"
                    FontWeight="Bold"
                    HorizontalAlignment="Center"
                    TextWrapping="Wrap"
                    Text="{Binding VideoName}" />
                <Image 
                    Width="460" 
                    Height="150" 
                    Margin="0,0,0,25" 
                    HorizontalAlignment="Center"
                    Source="{Binding VideoThumbnailBitmap}" />
                <!-- Link Box -->
                <TextBlock
                    Margin="0,0,0,7"
                    FontWeight="Bold"
                    HorizontalAlignment="Left"
                    Text="Link" />
                <TextBox
                    Width="460"
                    Margin="0,0,0,15"
                    Padding="20,20,20,20"
                    HorizontalAlignment="Center" 
                    Watermark="Paste link here"
                    Text="{Binding YoutubeLink}"/>
                <!-- File Type -->
                <TextBlock 
                    Margin="0,0,0,7"
                    FontWeight="Bold"
                    HorizontalAlignment="Left"
                    Text="Type" />
                <ComboBox 
                    Width="460"
                    Margin="0,0,0,15"
                    Padding="20,20,20,20"
                    HorizontalAlignment="Center" 
                    ItemsSource="{Binding StreamTypes}" 
                    SelectedItem="{Binding SelectedStreamType}" 
                    IsEnabled="{Binding IsVideoLoaded}" />
                <!-- Quality -->
                <TextBlock
                    Margin="0,0,0,7"
                    FontWeight="Bold"
                    HorizontalAlignment="Left"
                    Text="Quality" />
                <ComboBox 
                    Width="460" 
                    Margin="0,0,0,25"
                    Padding="20,20,20,20"
                    HorizontalAlignment="Center"
                    ItemsSource="{Binding StreamQualities}" 
                    SelectedItem="{Binding SelectedStreamQuality}"
                    IsEnabled="{Binding IsVideoLoaded}" />
                <!-- Submit -->
                <Button 
                    Width="460"
                    Margin="0,10,0, 0"
                    Padding="30,20"
                    HorizontalContentAlignment="Center"
                    Background='#8043ff64'
                    BorderThickness="1"
                    BorderBrush="DarkGray"
                    HorizontalAlignment="Center"
                    Content="Download"
                    Command="{Binding DownloadCommand}"
                    IsEnabled="{Binding IsVideoLoaded}" />
                </StackPanel>
        </Border>
    </Panel>
</UserControl>