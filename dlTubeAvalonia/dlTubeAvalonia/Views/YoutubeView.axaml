<UserControl 
	x:Class="dlTubeAvalonia.Views.YoutubeView"
	x:DataType="viewModels:YoutubeViewModel"
	xmlns="https://github.com/avaloniaui"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:viewModels="clr-namespace:dlTubeAvalonia.ViewModels">
	
	<!-- Downloader -->
	<StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
		<!-- Video Meta -->
		<Image 
			Width="300" 
			Height="150" 
			Margin="0,0,0,10" 
			HorizontalAlignment="Center"
			Source="{Binding VideoThumbnailBitmap}"
			IsVisible="{Binding IsThumbnailAvailable}" />
		<TextBlock 
			Margin="0,0,0,10" 
			FontWeight="Bold" 
			HorizontalAlignment="Left"
			Text="{Binding VideoName}" 
			IsVisible="{Binding IsNameAvailable}"/>
		<!-- Link Box -->
		<TextBlock
			Margin="0,0,0,10"
			FontWeight="Bold"
			HorizontalAlignment="Left"
			Text="Paste a link to download" />
		<TextBox
			Width="300"
			Margin="0,0,0,10"
			Padding="15,15,15,15"
			HorizontalAlignment="Center" 
			Watermark="Paste link here"
			Text="{Binding YoutubeLink}"/>
		<!-- File Type -->
		<TextBlock 
			Margin="0,10,0,10" 
			HorizontalAlignment="Left"
			Text="File Type" />
		<ComboBox 
			Width="300" 
			Margin="0,0,0,10"
			Padding="15,15,15,15"
			HorizontalAlignment="Center" 
			ItemsSource="{Binding StreamTypes}" 
			SelectedItem="{Binding SelectedStreamType}" />
		<!-- Quality -->
		<TextBlock
			Margin="0,10,0,10"
			HorizontalAlignment="Left"
			Text="Quality" />
		<ComboBox 
			Width="300" 
			Margin="0,0,0,10"
			Padding="15,15,15,15"
			HorizontalAlignment="Center"
			ItemsSource="{Binding StreamQualities}" 
			SelectedItem="{Binding SelectedStreamQuality}" />
		<!-- Submit -->
		<Button 
			Content="Download" 
			Width="100"
			Margin="0,10,0,0"
			Padding="15,15,15,15"
			HorizontalAlignment="Center" />
	</StackPanel>
	
</UserControl>