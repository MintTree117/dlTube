<UserControl 
	x:Class="dlTubeAvalonia.Views.AppSettingsView"
	x:DataType="viewModels:AppSettingsViewModel"
	xmlns="https://github.com/avaloniaui"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:viewModels="clr-namespace:dlTubeAvalonia.ViewModels">
	
	<StackPanel
		HorizontalAlignment="Center"
		Width="400" 
		Height="400">
		<TextBlock
			Margin="0 0 0 30"
			HorizontalAlignment="Left"
			FontWeight="Bold"
			FontSize="40"
			TextDecorations="Underline"
			Text="App Settings" />
		<TextBlock
			Margin="0 0 0 10" 
			HorizontalAlignment="Left"
			Text="Download Location" />
		<TextBox 
			Width="400" Margin="0 0 0 0" 
			HorizontalAlignment="Center"
			Text="{Binding DownloadLocation}" />
		<Button
			Width="400"
			Margin="0,20,0,10"
			Padding="20,8"
			HorizontalContentAlignment="Center"
			Background='MediumSeaGreen'
			BorderThickness="3"
			BorderBrush="LimeGreen"
			HorizontalAlignment="Center"
			IsEnabled="{Binding SettingsChanged}"
			Command="{Binding SaveChangesCommand}"
			Content="Save Changes" />
	</StackPanel>
	
</UserControl>