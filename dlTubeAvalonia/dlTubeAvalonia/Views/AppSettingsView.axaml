<UserControl 
	x:Class="dlTubeAvalonia.Views.AppSettingsView"
	x:DataType="viewModels:AppSettingsViewModel"
	xmlns="https://github.com/avaloniaui"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:viewModels="clr-namespace:dlTubeAvalonia.ViewModels">
	
	<Border
		MaxWidth="560"
		Padding="40"
		HorizontalAlignment="Center"
		VerticalAlignment="Center"
		Background="#cc000000"
		BorderBrush="#404040"
		BorderThickness="1"
		CornerRadius="5">
		<StackPanel>
			<TextBlock
				Margin="0 0 0 30"
				HorizontalAlignment="Left"
				FontWeight="Bold"
				FontSize="40"
				TextDecorations="Underline"
				Text="App Settings" />
			<TextBlock
				Margin="0 0 0 10"
				HorizontalAlignment="Left"
				Text="Download Location" />
			<TextBox
				Margin="0 0 0 0"
				HorizontalAlignment="Stretch"
				Text="{Binding DownloadLocation}" />
			<Button
				Margin="0,20,0,10"
				Padding="20,8"
				HorizontalContentAlignment="Center"
				HorizontalAlignment="Center"
				IsEnabled="{Binding SettingsChanged}"
				Command="{Binding SaveChangesCommand}"
				Content="Save Changes" />
		</StackPanel>
	</Border>
	
</UserControl>