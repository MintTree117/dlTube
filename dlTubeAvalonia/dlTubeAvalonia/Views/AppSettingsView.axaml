<UserControl 
	x:Class="dlTubeAvalonia.Views.AppSettingsView"
	x:DataType="viewModels:AppSettingsViewModel"
	xmlns="https://github.com/avaloniaui"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:viewModels="clr-namespace:dlTubeAvalonia.ViewModels">
	
	<!-- Content Wrapper -->
	<Border
		HorizontalAlignment="Center"
		VerticalAlignment="Center"
		BorderThickness="1"
		MaxWidth="560"
		Padding="40"
		CornerRadius="5"
		Background="#cc000000"
		BorderBrush="#404040">
		<!-- Content -->
		<StackPanel>
			<!-- Title -->
			<TextBlock
				HorizontalAlignment="Left"
				Margin="0 0 0 30"
				FontSize="40"
				FontWeight="Bold"
				TextDecorations="Underline"
				Text="App Settings" />
			<!-- Download Location Title -->
			<TextBlock
				HorizontalAlignment="Left"
				Margin="0 0 0 10"
				Text="Download Location" />
			<!-- Download Location Field -->
			<TextBox
				HorizontalAlignment="Stretch"
				Margin="0 0 0 0"
				Text="{Binding DownloadLocation}" />
			<!-- Save Button -->
			<Button
				HorizontalContentAlignment="Center"
				HorizontalAlignment="Center"
				Margin="0,20,0,10"
				Padding="20,8"
				IsEnabled="{Binding SettingsChanged}"
				Command="{Binding SaveChangesCommand}"
				Content="Save Changes" />
		</StackPanel>
	</Border>
</UserControl>