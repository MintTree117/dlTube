<UserControl 
	x:Class="dlTubeAvalonia.Views.AppSettingsView"
	x:DataType="viewModels:AppSettingsViewModel"
	xmlns="https://github.com/avaloniaui"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:viewModels="clr-namespace:dlTubeAvalonia.ViewModels">

	<!-- Content -->
	<StackPanel VerticalAlignment="Center" MaxWidth="800">
		<!-- Title -->
		<TextBlock
			Classes="PageTitle"
			Text="App Settings" />
		<!-- Title Separator -->
		<Border Classes="TitleSeparator"/>
		<!-- Download Location Title -->
		<TextBlock
			HorizontalAlignment="Left"
			Margin="0 0 0 5"
			FontWeight="Bold"
			Text="Download Location" />
		<!-- Download Location Field -->
		<TextBox
			HorizontalAlignment="Stretch"
			Margin="0 0 0 0"
			Padding="15"
			Text="{Binding DownloadLocation}" />
		<!-- Save Button -->
		<Button
			HorizontalAlignment="Stretch"
			HorizontalContentAlignment="Center"
			Margin="0,15,0,0"
			Padding="0,15"
			IsEnabled="{Binding SettingsChanged}"
			Command="{Binding SaveChangesCommand}"
			Content="Save Changes" />
	</StackPanel>
</UserControl>