<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:dlTubeAvalonia.ViewModels"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:dlTubeAvalonia="clr-namespace:dlTubeAvalonia"
        mc:Ignorable="d" d:DesignWidth="1200" d:DesignHeight="800"
        x:Class="dlTubeAvalonia.Views.MainWindow"
        x:DataType="vm:MainWindowViewModel"
        Icon="/Assets/avalonia-logo.ico"
        Title="dlTubeAvalonia">

    <!-- Data Context -->
    <Design.DataContext>
        <!-- This only sets the DataContext for the previewer in an IDE,
             to set the actual DataContext for runtime, set the DataContext property in code (look at App.axaml.cs) -->
        <vm:MainWindowViewModel/>
    </Design.DataContext>
    
    <!-- Window Background -->
    <Window.Background>
        <ImageBrush
            Source="avares://dlTubeAvalonia/Assets/dsotm.jpg"
            Stretch="UniformToFill" />
    </Window.Background>
    
    <!-- Content -->
    <Grid>
        <!-- Background -->
        <Image Source="avares://dlTubeAvalonia/Assets/dsotm.jpg" Stretch="Fill" />
        <!-- Semi-transparent overlay -->
        <Border Background="#AA000000" />
        <!-- Main -->
        <DockPanel>
            <!-- Menu -->
            <Menu DockPanel.Dock="Top"
                  Background="#292f3b"
                  BorderBrush="DarkGray">
                <!-- Youtube Downloader -->
                <MenuItem
                    Header="Youtube Downloader"
                    Click="OnClickViewYoutubeDownloader" />
                <!-- Youtube Search -->
                <MenuItem
                    Header="Youtube Search"
                    Click="OnClickViewYoutubeSearch" />
                <!-- Private Archive -->
                <MenuItem
                    Header="Private Archive"
                    Click="OnClickViewArchive" />
                <!-- App Settings -->
                <MenuItem
                    Header="App Settings"
                    Click="OnClickAppSettings" />
                <!-- Login -->
                <MenuItem
                    Header="Login"
                    IsVisible="{Binding ShowLogin}"
                    Click="OnClickLogin" />
                <!-- Account -->
                <MenuItem
                    Header="Account"
                    IsVisible="{Binding IsAuthenticated}">
                    <!-- Account Settings -->
                    <MenuItem
                        Header="Settings"
                        Click="OnClickAccountSettings" />
                    <!-- Logout -->
                    <MenuItem
                        Header="Logout"
                        Click="OnClickLogout" />
                </MenuItem>
            </Menu>
            <!-- Main Content -->
            <ContentControl 
                Opacity="1" 
                x:Name="MainContent" />
        </DockPanel>
    </Grid>
    
</Window>